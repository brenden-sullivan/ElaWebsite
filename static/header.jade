div(id="header-div")
	header(id="page-header")
		ul(id="header-links")
			li(class="header-elements")
				a(id="home-link" href="/") Home
			li(class="header-elements")
				a(id="documents-link" href="/Documents") Writing	
			li(class="header-elements")
