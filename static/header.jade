			a(id="profile-button" class="button-link small-button" href="/profile") Profile

	else if(view == 'guest')
		div(id="actions-div")
			label(id="profile-label") Hello, Guest
			
			a(id="logout-button" class="button-link small-button" href="/logout") Sign In
			
			form(id="signup-button-form" class="button-form" method="POST" action="/signup-form")
				input(id="create-button" class="button-input small-button" type="submit" value="Sign Up")