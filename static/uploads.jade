			h3(id="add-document-status" class="status-message")=addDocumentStatus
			
			button(id="show-add-form-button" class="add-button") Upload
		
		+uploadForm
			
		div(id="uploads-table-div")
			table(id="uploads-table")
				tr(class="table-header")
					th First
					th Last
					th Assignment
					th Preview
					th Date Uploaded
					
				each val in uploads
					if(view == 'student')
						+uploadsRow(val)
					else if(view == 'admin')
						+adminUploadsRow(val)
										
